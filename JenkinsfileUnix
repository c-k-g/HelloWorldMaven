pipeline { 
    agent any 
    stages {
        stage('Build') { 
            steps {
                withMaven(jdk: 'Java8', maven: 'Maven3.6'){
                        sh "mvn clean compile"
                }
            }
        }
        stage('Test'){
            steps {
                withMaven(jdk: 'Java8', maven: 'Maven3.6'){
                        sh "mvn test"
                }

            }
        }
        stage('Deploy') {
            steps {
               withMaven(jdk: 'Java8', maven: 'Maven3.6'){
                        sh "mvn deploy"
                }

            }
        }
    }
}
